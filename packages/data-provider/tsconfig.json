{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "lib": ["ES2017", "DOM", "ES2021.String"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "types"],
  "include": ["src/**/*"]
}
