{
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es6"],
    "paths": {
      "~/*": ["../../api/*"]
    },
    "noErrorTruncation": true,
    "disableSizeLimit": true
  },
  "include": ["*.ts"]
}
